{
  "name": "nodetools",
  "version": "0.0.9",
  "description": "Personal all-hands assistant.",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./dist/electron.js",
    "rebuild-robotjs": "electron-rebuild -f -w robotjs --force-abi=89",
    "rebuild-prebuild-install": "electron-rebuild -f -w prebuild-install --force-abi=89",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-all": "electron-builder -mw"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbuslenko/nodetools.git"
  },
  "author": "mbuslenko",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mbuslenko/nodetools/issues"
  },
  "homepage": "https://github.com/mbuslenko/nodetools#readme",
  "dependencies": {
    "axios": "^0.27.2",
    "electron-store": "^8.0.2",
    "node-abi": "^3.22.0",
    "robotjs": "^0.6.0",
    "update-electron-app": "^2.0.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "debug": "^4.3.4",
    "electron": "^19.0.6",
    "electron-builder": "^23.1.0",
    "electron-packager": "^15.5.1",
    "electron-rebuild": "^3.2.3",
    "typescript": "^4.7.2"
  },
  "build": {
    "extraMetadata": {
      "main": "dist/electron.js"
    },
    "files": [
      "./dist/electron.js"
    ],
    "appId": "com.nodetools.app",
    "mac": {
      "target": "dmg",
      "icon": "build/app-icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis",
      "icon": "build/app-icon.png"
    }
  }
}
