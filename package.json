{
  "name": "nodetools",
  "version": "0.1.1",
  "description": "Personal all-hands assistant.",
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./dist/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-all": "electron-builder -mw",
    "pack:osx": "electron-packager . Nodetools --out=builds/release-builds/osx --platform=darwin --arch=x64 --icon=src/assets/build/icon.icns",
    "pack:win64": "electron-packager . Nodetools --out=builds/release-builds/windows --platform=win32 --arch=x64 --app-version=0.0.9 --icon=src/assets/build/icon.ico",
    "create-win-installer": "node builds/windows/createInstaller.js",
    "create-osx-installer": "electron-installer-dmg ./builds/release-builds/osx/Nodetools-darwin-x64/Nodetools.app Nodetools --out=builds/installers/osx --overwrite --icon=src/assets/build/icon.icns",
    "create-debian-installer": "electron-installer-debian --src builds/release-builds/debian/nodetools-linux-x64/ --arch amd64 --config builds/debian/config.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbuslenko/nodetools.git"
  },
  "author": "mbuslenko",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mbuslenko/nodetools/issues"
  },
  "homepage": "https://github.com/mbuslenko/nodetools#readme",
  "dependencies": {
    "@nut-tree/nut-js": "^2.1.1",
    "axios": "^0.27.2",
    "electron-store": "^8.0.2",
    "node-mac-permissions": "^2.2.1",
    "update-electron-app": "^2.0.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "debug": "^4.3.4",
    "electron": "^19.0.0",
    "electron-builder": "^23.1.0",
    "electron-installer-debian": "^3.1.0",
    "electron-installer-dmg": "^4.0.0",
    "electron-packager": "^15.5.1",
    "electron-rebuild": "^3.2.3",
    "electron-winstaller": "^5.0.0",
    "typescript": "^4.7.2"
  },
  "build": {
    "extraMetadata": {
      "main": "dist/main.js"
    },
    "files": [
      "./dist/main.js"
    ],
    "appId": "com.nodetools.app",
    "mac": {
      "target": "dmg",
      "icon": "src/assets/build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/build/icon.png"
    }
  }
}
